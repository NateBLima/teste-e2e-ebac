pipeline {
    agent any

    stages {
        stage('clonar repositorio'){
            steps {
                 git url: 'https://github.com/NateBLima/teste-e2e-ebac.git', branch 'main' 
            }
        }
        stage('instalar dependencias'){
            steps{
                sh 'npm install'
            }
        }
        stage('executar testes'){
            steps{
               sh 'NO_COLOR=1 npm run cy:run'
            }
        }
    }
}